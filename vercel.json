{
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    },
    "api/track.js": {
      "maxDuration": 30
    },
    "api/cron/*.js": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type,X-RapidAPI-Key,X-RapidAPI-Host" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/check-prices",
      "schedule": "0 * * * *"
    }
  ]
}
