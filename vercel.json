{
  "version": 2,
  "crons": [
    {
      "path": "/api/cron/check-prices",
      "schedule": "0 0 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-RapidAPI-Key,X-RapidAPI-Host,Content-Type,Authorization" }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    },
    "api/cron/*.js": {
      "maxDuration": 60
    }
  }
}