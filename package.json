{
  "name": "pricedrop-api",
  "version": "1.0.0",
  "description": "Professional price tracking and monitoring API with RapidAPI integration",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "deploy": "vercel --prod",
    "test": "node scripts/test-production.js",
    "test:components": "node scripts/test-endpoints.js",
    "test:local": "NODE_ENV=development node scripts/test-production.js",
    "db:migrate": "node scripts/migrate-database.js",
    "cron:test": "node api/cron/check-prices.js",
    "setup": "npm install && npm run db:migrate"
  },
  "engines": {
    "node": ">=18.0.0"
  },

  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "express-rate-limit": "^7.1.0",
    "@sendgrid/mail": "^8.0.0",
    "dotenv": "^16.3.1"
  },
  
  "devDependencies": {
    "@types/node": "^20.10.0",
    "vercel": "^48.1.6"
  },
  "keywords": [
    "price-tracking",
    "price-monitoring",
    "e-commerce",
    "rapidapi",
    "web-scraping",
    "ebay-api",
    "amazon-affiliate",
    "serverless",
    "vercel",
    "api",
    "nodejs",
    "supabase",
    "real-time-pricing"
  ],
  "author": "PriceDrop API Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pricedrop-api.git"
  },
  "homepage": "https://pricedrop-api.vercel.app",
  "bugs": {
    "url": "https://github.com/yourusername/pricedrop-api/issues"
  },
  "rapidapi": {
    "id": "pricedrop-api",
    "category": "ecommerce",
    "collections": [
      "price-tracking",
      "web-scraping",
      "data"
    ]
  }
}
