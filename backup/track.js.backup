export default function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Method not allowed" });
  }
  
  const { url, target_price, notify_on_drop } = req.body;
  
  res.status(201).json({
    success: true,
    message: "Product tracking started (demo mode)",
    product: {
      id: `prod_${Date.now()}`,
      url: url || "https://example.com",
      target_price: target_price || 99.99,
      notify_on_drop: notify_on_drop || false
    }
  });
}
